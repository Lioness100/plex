{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "ts-node": {
    "transpileOnly": true
  }
}
